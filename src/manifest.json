{
    "manifest_version": 3,

    "author": "mgautam07",
    "name": "Time Tracker Extension",
    "version": "0.0.1",
    "description": "A chromium extension to keep track of time.",
    "icons":
    {
        "16": "icons/16x16.png",
        "48": "icons/48x48.png",
        "128": "icons/128x128.png",
        "256": "icons/256x256.png"
    },

    "background":
    {
        "service_worker": "background.js",
        "type": "module"
    }, 

    "action":
    {
        "default_icon":
        {
            "16": "icons/16x16.png",
            "24": "icons/24x24.png",
            "32": "icons/32x32.png"
        },
        "default_title": "Time Tracker",
        "default_popup": "popup/popup.html"
    },

    "permissions": ["storage", "tabs", "alarms", "windows"],
    "host_permissions": ["<all_urls>"]
}